{
  "name": "wcb",
  "version": "0.11.0",
  "description": "Personal Webpack config builder",
  "author": "jupl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jupl/wcb/issues"
  },
  "homepage": "https://github.com/jupl/wcb#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/jupl/wcb"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "trash '*.js' '*.d.ts' '*.map'",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "codecov": "npm run coverage && codecov",
    "lint": "tsc && npm run lint:file",
    "lint:file": "tslint --project tsconfig.json",
    "test": "npm run clean && jest --config .jestrc.json",
    "test:update": "npm run test -- -u",
    "test:watch": "npm run test -- --watch",
    "pub": "npm run clean && npm run build && npm publish"
  },
  "dependencies": {
    "awesome-typescript-loader": "^5.2.1",
    "babel-minify-webpack-plugin": "^0.3.1",
    "copy-webpack-plugin": "^4.6.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "globule": "^1.2.1",
    "lodash": "^4.17.11",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "style-loader": "^0.23.1",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "webpack": "^4.4.0"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.5.1",
    "@types/copy-webpack-plugin": "^4.4.2",
    "@types/extract-text-webpack-plugin": "^3.0.3",
    "@types/globule": "^1.1.3",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.118",
    "@types/node": "^10.12.3",
    "@types/webpack": "^4.4.18",
    "@types/webpack-dev-server": "^3.1.1",
    "@types/webpack-node-externals": "^1.6.3",
    "codecov": "^3.1.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-immutable": "^4.9.1",
    "tslint-sonarts": "^1.8.0",
    "typescript": "^3.1.6",
    "typescript-tslint-plugin": "0.0.5",
    "webpack": "^4.25.1"
  }
