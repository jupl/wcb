{
  "name": "wcb",
  "version": "0.2.1",
  "description": "Personal Webpack config builder",
  "author": "jupl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jupl/wcb/issues"
  },
  "homepage": "https://github.com/jupl/wcb#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/jupl/wcb"
  },
  "main": "index.js",
  "scripts": {
    "clean": "trash '*.js' '*.d.ts'",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "codecov": "npm run coverage && codecov",
    "lint": "tslint --type-check --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run clean && jest",
    "test:watch": "npm run test -- --watch",
    "pub": "npm run clean && tsc --project tsconfig.build.json && npm publish"
  },
  "dependencies": {
    "awesome-typescript-loader": "^3.1.3",
    "babili-webpack-plugin": "^0.0.11",
    "copy-webpack-plugin": "^4.0.1",
    "globule": "^1.1.0",
    "webpack-node-externals": "^1.5.4"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^4.0.0",
    "@types/globule": "^1.1.3",
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.14",
    "@types/webpack": "^2.2.15",
    "codecov": "^2.1.0",
    "eslint-config-jupl": "^0.6.0",
    "jest": "^20.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^20.0.0",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2",
    "webpack": "^2.4.1"
  },
  "jest": {
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "testRegex": "(/__tests__/.*|[./](test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
