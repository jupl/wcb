{
  "name": "wcb",
  "version": "0.5.2",
  "description": "Personal Webpack config builder",
  "author": "jupl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jupl/wcb/issues"
  },
  "homepage": "https://github.com/jupl/wcb#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/jupl/wcb"
  },
  "main": "index.js",
  "scripts": {
    "clean": "trash '*.js' '*.d.ts'",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "codecov": "npm run coverage && codecov",
    "lint": "npm run lint:file",
    "lint:file": "tslint --fix --project tsconfig.json",
    "test": "npm run clean && jest",
    "test:watch": "npm run test -- --watch",
    "pub": "npm run clean && tsc --project tsconfig.build.json && npm publish"
  },
  "dependencies": {
    "awesome-typescript-loader": "^3.1.3",
    "babili-webpack-plugin": "^0.1.1",
    "copy-webpack-plugin": "^4.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "globule": "^1.1.0",
    "style-loader": "^0.19.0",
    "webpack-node-externals": "^1.5.4"
  },
  "peerDependencies": {
    "webpack": ">=3.1.0"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.1.1",
    "@types/copy-webpack-plugin": "^4.0.0",
    "@types/extract-text-webpack-plugin": "^3.0.0",
    "@types/globule": "^1.1.3",
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.15",
    "@types/webpack": "^3.0.5",
    "@types/webpack-node-externals": "^1.6.0",
    "codecov": "^2.1.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "trash-cli": "^1.4.0",
    "ts-jest": "^21.0.1",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-immutable": "^4.4.0",
    "tslint-language-service": "^0.9.6",
    "typescript": "^2.3.2",
    "webpack": "^3.3.0"
  },
  "jest": {
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "testRegex": "(/__tests__/.*|[./](test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
