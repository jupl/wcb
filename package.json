{
  "name": "wcb",
  "version": "0.9.0",
  "description": "Personal Webpack config builder",
  "author": "jupl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jupl/wcb/issues"
  },
  "homepage": "https://github.com/jupl/wcb#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/jupl/wcb"
  },
  "main": "index.js",
  "scripts": {
    "clean": "trash '*.js' '*.d.ts'",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "codecov": "npm run coverage && codecov",
    "lint": "npm run lint:file && tsc --noEmit",
    "lint:file": "tslint --project tsconfig.json",
    "test": "npm run clean && jest",
    "test:watch": "npm run test -- --watch",
    "pub": "npm run clean && tsc --project tsconfig.build.json && npm publish"
  },
  "dependencies": {
    "awesome-typescript-loader": "^5.0.0",
    "babel-minify-webpack-plugin": "^0.3.1",
    "copy-webpack-plugin": "^4.5.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "globule": "^1.1.0",
    "lodash": "^4.17.10",
    "style-loader": "^0.21.0",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "webpack": "^4.4.0"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.5.1",
    "@types/copy-webpack-plugin": "^4.4.1",
    "@types/extract-text-webpack-plugin": "^3.0.3",
    "@types/globule": "^1.1.3",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.109",
    "@types/node": "^10.1.3",
    "@types/webpack": "^4.4.0",
    "@types/webpack-node-externals": "^1.6.3",
    "codecov": "^3.0.2",
    "istanbul-api": "^1.3.2",
    "istanbul-reports": "^1.4.0",
    "jest": "^23.0.1",
    "jest-cli": "^23.0.1",
    "trash-cli": "^1.4.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-immutable": "^4.5.4",
    "tslint-language-service": "^0.9.9",
    "tslint-sonarts": "^1.6.0",
    "typescript": "^2.8.3",
    "webpack": "^4.10.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "testRegex": "(/__tests__/.*|[./](test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
