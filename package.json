    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.1.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "webpack-log": "^2.0.0",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "webpack": "^4.4.0"
  },
  "devDependencies": {
