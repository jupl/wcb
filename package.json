    "@types/jest": "^24.0.9",
    "@types/lodash": "^4.14.119",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/node": "^10.12.15",
    "@types/webpack": "^4.4.21",
    "@types/webpack-dev-server": "^3.1.1",
    "@types/webpack-node-externals": "^1.6.3",
    "codecov": "^3.1.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
